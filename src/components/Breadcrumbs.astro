---
import type { BreadcrumbItem } from '../types/navigation';

interface Props {
  breadcrumbs: BreadcrumbItem[];
}

const { breadcrumbs } = Astro.props;
---

<nav class="mb-6 py-3 border-b border-dark-700" aria-label="Breadcrumb navigation">
  <ol class="flex items-center flex-wrap gap-2 list-none m-0 p-0 text-sm">
    {breadcrumbs.map((item, index) => (
      <li class="flex items-center gap-2">
        {index < breadcrumbs.length - 1 ? (
          <a href={item.path} class="text-dark-400 no-underline transition-colors duration-200 py-0.5 px-1 rounded hover:text-dark-300 hover:bg-dark-800 focus:outline-2 focus:outline-dark-600 focus:outline-offset-1">
            {item.label}
          </a>
        ) : (
          <span class="text-white font-medium" aria-current="page">
            {item.label}
          </span>
        )}
        {index < breadcrumbs.length - 1 && (
          <span class="text-dark-500 flex items-center" aria-hidden="true">
            <svg width="8" height="8" viewBox="0 0 8 8" fill="none">
              <path d="M2 1.5L5 4L2 6.5" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>