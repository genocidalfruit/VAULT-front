---
import Layout from '../../layouts/Layout.astro';
import { buildNavigationTree } from '../../utils/navigationUtils';
import NavigationTree from '../../components/NavigationTree.astro';
import LoadingSkeleton from '../../components/LoadingSkeleton.astro';

const navigationTree = await buildNavigationTree();
---

<Layout title="Knowledge Base - All Posts">
  <main class="posts-index">
    <div class="container">
      <header class="page-header">
        <h1>Knowledge Base</h1>
        <p>Explore all posts organized by category</p>
        <div class="back-home">
          <a href="/">‚Üê Back to Home</a>
        </div>
      </header>

      <div class="content-grid">
        <aside class="sidebar">
          <div class="navigation-header">
            <h3>Browse Categories</h3>
          </div>
          <div class="navigation-container">
            {navigationTree.length > 0 ? (
              <NavigationTree tree={navigationTree} />
            ) : (
              <LoadingSkeleton lines={8} />
            )}
          </div>
        </aside>

        <div class="main-content">
          <div class="welcome-message">
            <h2>Welcome to the Knowledge Base</h2>
            <p>
              This is a comprehensive collection of articles, tutorials, and guides organized 
              into categories. Use the navigation on the left to browse through different topics, 
              or click on any item to start reading.
            </p>
            
            <div class="quick-stats">
              <div class="stat-item">
                <span class="stat-number">{navigationTree.length}</span>
                <span class="stat-label">Categories</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">
                  {navigationTree.reduce((total, category) => {
                    function countFiles(items) {
                      return items.reduce((count, item) => {
                        if (item.type === 'file') return count + 1;
                        if (item.children) return count + countFiles(item.children);
                        return count;
                      }, 0);
                    }
                    return total + countFiles(category.children || []);
                  }, 0)}
                </span>
                <span class="stat-label">Articles</span>
              </div>
            </div>

            <div class="getting-started">
              <h3>Getting Started</h3>
              <ul>
                <li>Browse categories in the sidebar to find topics of interest</li>
                <li>Click on folder icons to expand and explore subcategories</li>
                <li>Select any article to start reading</li>
                <li>Use breadcrumb navigation to keep track of your location</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .posts-index {
    min-height: 100vh;
    padding: 1rem 0;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 1rem 0;
    font-family: 'JetBrains Mono', monospace;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .page-header p {
    font-size: 1rem;
    color: #cccccc;
    margin: 0 0 1.5rem 0;
  }

  .back-home a {
    color: #888888;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .back-home a:hover {
    color: #cccccc;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .sidebar {
    background: #2a2a2a;
    border-radius: 8px;
    border: 1px solid #404040;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    order: 2;
  }

  .navigation-header {
    padding: 1.25rem;
    border-bottom: 1px solid #404040;
  }

  .navigation-header h3 {
    color: #ffffff;
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    font-family: 'JetBrains Mono', monospace;
  }

  .navigation-container {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }

  .main-content {
    background: #2a2a2a;
    border-radius: 8px;
    border: 1px solid #404040;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    padding: 1.5rem;
    order: 1;
  }

  .welcome-message h2 {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    font-family: 'JetBrains Mono', monospace;
  }

  .welcome-message p {
    color: #cccccc;
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .quick-stats {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #333333;
    border-radius: 8px;
    border: 1px solid #404040;
  }

  .stat-item {
    text-align: center;
    padding: 1rem;
    background: #2a2a2a;
    border-radius: 6px;
  }

  .stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #888888;
    text-transform: uppercase;
    font-weight: 500;
  }

  .getting-started h3 {
    color: #ffffff;
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    font-family: 'JetBrains Mono', monospace;
  }

  .getting-started ul {
    color: #cccccc;
    line-height: 1.6;
    padding-left: 1.25rem;
    font-size: 0.875rem;
  }

  .getting-started li {
    margin-bottom: 0.5rem;
  }

  /* Tablet and larger screens */
  @media (min-width: 768px) {
    .posts-index {
      padding: 1.5rem 0;
    }

    .container {
      padding: 0 1.5rem;
    }

    .page-header {
      margin-bottom: 3rem;
    }

    .page-header h1 {
      font-size: 3rem;
    }

    .page-header p {
      font-size: 1.125rem;
    }

    .content-grid {
      grid-template-columns: 300px 1fr;
      gap: 3rem;
    }

    .sidebar {
      position: sticky;
      top: 1.5rem;
      max-height: calc(100vh - 3rem);
      order: 1;
    }

    .main-content {
      padding: 3rem;
      order: 2;
    }

    .welcome-message h2 {
      font-size: 2rem;
    }

    .welcome-message p {
      font-size: 1rem;
    }

    .quick-stats {
      flex-direction: row;
      gap: 2rem;
    }

    .stat-item {
      padding: 0;
      background: transparent;
    }

    .stat-number {
      font-size: 2rem;
    }

    .stat-label {
      font-size: 0.875rem;
    }

    .getting-started ul {
      font-size: 1rem;
    }
  }

  /* Desktop screens */
  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 300px 1fr;
      gap: 3rem;
    }
  }
</style>
</Layout>