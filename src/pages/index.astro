---
import Layout from "../layouts/Layout.astro";
import BlogIndex from "../components/BlogIndex.astro";
---

<Layout title="Personal Blog - Thoughts & Stories">
  <main class="min-h-screen grid grid-rows-[auto_2fr_1fr]">
    <!-- Title Section - stays at top -->
    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 sm:pt-12 lg:pt-24 w-full"
    >
      <h1
        class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-white m-0 font-mono leading-[0.9] tracking-tighter drop-shadow-2xl"
      >
        genocidalfruit's<br />
        <span class="text-dark-300 font-light">Knowledge Base</span>
      </h1>
    </div>

    <!-- Card Section - positioned higher -->
    <div
      class="flex items-center justify-center lg:justify-end max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full"
    >
      <BlogIndex />
    </div>

    <!-- Smaller bottom spacer -->
    <div class="pb-8 sm:pb-12 lg:pb-24"></div>
  </main>
</Layout>
